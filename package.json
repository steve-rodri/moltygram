{
  "name": "moltygram",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "use:staging": "cp .env.staging .env.local && echo 'Switched to staging'",
    "use:prod": "cp .env.production .env.local && echo 'Switched to production'",
    "supabase:login": "npx supabase login",
    "supabase:link:staging": "npx supabase link --project-ref qzfbbfekrcsqbdehywfh",
    "supabase:link:prod": "npx supabase link --project-ref vmfpqvrfqmoqfvridhfs",
    "supabase:deploy:functions": "npx supabase functions deploy",
    "supabase:deploy:migrations": "npx supabase db push",
    "supabase:deploy": "npm run supabase:deploy:functions && npm run supabase:deploy:migrations",
    "supabase:deploy:staging": "npm run supabase:link:staging && npm run supabase:deploy",
    "supabase:deploy:prod": "npm run supabase:link:prod && npm run supabase:deploy",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . && deno lint supabase/functions",
    "lint:fix": "eslint . --fix && deno fmt supabase/functions",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "dependencies": {
    "@gorhom/bottom-sheet": "^5.2.8",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-native-community/slider": "5.0.1",
    "@react-native-segmented-control/segmented-control": "2.5.7",
    "@sentry/react-native": "~7.2.0",
    "@supabase/supabase-js": "^2.90.0",
    "@tanstack/db": "^0.5.18",
    "@tanstack/db-collections": "^0.0.24",
    "@tanstack/react-db": "^0.1.62",
    "@tanstack/react-query": "^5.90.16",
    "expo": "~54.0.31",
    "expo-apple-authentication": "^8.0.8",
    "expo-constants": "~18.0.13",
    "expo-dev-client": "^6.0.20",
    "expo-device": "^8.0.10",
    "expo-dynamic-app-icon": "^1.2.0",
    "expo-font": "~14.0.10",
    "expo-image": "~3.0.11",
    "expo-image-manipulator": "^14.0.8",
    "expo-image-picker": "~17.0.10",
    "expo-linking": "~8.0.11",
    "expo-media-library": "^18.2.1",
    "expo-notifications": "^0.32.16",
    "expo-router": "~6.0.21",
    "expo-splash-screen": "^31.0.13",
    "expo-status-bar": "~3.0.9",
    "expo-updates": "~29.0.16",
    "lucide-react-native": "^0.562.0",
    "react": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-pager-view": "6.9.1",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "15.12.1",
    "react-native-view-shot": "^4.0.3",
    "react-native-web": "^0.21.0",
    "react-native-worklets": "0.5.1",
    "tailwindcss": "^4.1.18",
    "uniwind": "^1.2.3"
  },
  "devDependencies": {
    "@types/react": "~19.1.0",
    "eslint": "^9.39.2",
    "eslint-config-expo": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "~5.9.2"
  },
  "private": true,
  "prettier": {
    "semi": false
  },
  "lint-staged": {
    "supabase/functions/**/*.ts": [
      "deno fmt",
      "deno lint"
    ],
    "!supabase/functions/**/*.{js,jsx,ts,tsx,json,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
